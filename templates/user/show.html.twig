{% extends 'base.html.twig' %}

{% block title %} Espace utilisateur{% endblock %}

{% block body %}
<div class="container mt-container">
    <div class="col-10 offset-1 mt-5">
        <h1>Espace utilisateur: {{ user.firstname }} {{ user.lastname }} 
            <span>
                {% if user.avatar is null %}
                <img src="https://eu.ui-avatars.com/api/?name={{user.firstname}}+{{user.lastname}}&rounded=true&color=2D0000&background=FF5F50"  class="img-responsive" />
                {% else %}
                <img src="{{ user.avatar }}"  class="rounded-circle" height="48" width="48"/>
                {% endif %}
            </span>
        </h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
            </tbody>
        </table>
    
        <a class="btn blue-gradient btn-sm" href="{{ path('user_edit', {'id': user.id}) }}">Modifier mes informations</a>
    </div>
</div>
{% endblock %}
