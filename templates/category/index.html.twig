{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Liste des cat√©gories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.title }}</td>
                <td>
                    <a class="badge badge-primary" href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                    <a class="badge badge-warning" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                    <a class="badge badge-danger" href="{{ path('category_edit', {'id': category.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Ajouter</a>
</div>
{% endblock %}
