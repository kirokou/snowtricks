{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="row">
    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.title }}</td>
                <td>
                    <a class="badge badge-primary" href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                    <a class="badge badge-warning" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                    <td> {{ include('category/_delete_form.html.twig') }}</td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun groupe trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn blue-gradient" href="{{ path('category_new') }}">Nouveau</a>
</div>
{% endblock %}
