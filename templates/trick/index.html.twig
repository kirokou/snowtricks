{% extends 'base.html.twig' %}

{% block title %}Trick index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!--Titre-->
        <h1>Liste des figures</h1>
        <!--Tableau d'affichage-->
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>category</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for trick in tricks %}
                <tr>
                    <td>{{ trick.title }}</td>
                    <td>{{ trick.slug }}</td>
                    <td>{{ trick.category.title }}</td>
                    <td>{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trick.updatedAt ? trick.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn" href="{{ path('trick_show', {'slug': trick.slug}) }}">show</a>
                        <a class="btn" href="{{ path('trick_edit', {'slug': trick.slug}) }}">edit</a>
                        <!--by form-->
                        <a class="btn" href="{{ path('trick_edit', {'slug': trick.slug}) }}">delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('trick_new') }}">Create new</a>
    </div>
    

    
{% endblock %}
