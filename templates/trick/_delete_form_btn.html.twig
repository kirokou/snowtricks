<form method="post" action="{{ path('trick_delete', {'slug': trick.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.slug) }}">
    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i> Supprimer</button>
</form>
