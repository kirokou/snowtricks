{% extends 'admin/base.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}
    <div class="row">
        <!--Titre-->
        <h1>Liste des tricks</h1>
        <!--Tableau d'affichage-->
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Categorie</th>
                    <th>Date de cr√©ation</th>
                    <th>Date de modification</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for trick in tricks %}
                <tr>
                    <td>{{ trick.title }}</td>
                    <td>{{ trick.slug }}</td>
                    <td>{{ trick.category.title }}</td>
                    <td>{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trick.updatedAt ? trick.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="badge badge-primary" href="{{ path('trick_show', {'slug': trick.slug}) }}"><i class="far fa-eye"></i> Voir</a>
                        <a class="badge badge-warning" href="{{ path('trick_edit', {'slug': trick.slug}) }}"> <i class="far fa-edit"></i> Modifier</a>
                        <!--by form-->
                        {{ include('trick/_delete_form_badge.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Il n'y a aucun trick en ligne</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn blue-gradient" href="{{ path('trick_new') }}">Nouveau</i></a>
    </div>
    

    
{% endblock %}
